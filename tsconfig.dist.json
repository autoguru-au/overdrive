{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"emitDeclarationOnly": true,
		"removeComments": false,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./dist/"
	},
	"exclude": [
		"node_modules",
		"dist",
		"lib/stories",
		"lib/test",
		"**/*.stories.tsx",
		"**/*.stories.jsx",
		"**/*.spec.tsx",
		"**/*.spec.jsx"
	]
}
