{
  "name": "@autoguru/overdrive",
  "version": "1.0.0",
  "description": "Overdrive is a product component library, and design system for AutoGuru.",
  "keywords": [
    "component",
    "design-system",
    "react",
    "storybook",
    "styleguide",
    "ui"
  ],
  "homepage": "https://overdrive.autoguru.io",
  "repository": "https://github.com/autoguru-au/overdrive",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.scss"
  ],
  "main": "./dist/overdrive.js",
  "module": "./dist/overdrive.mjs",
  "types": "./dist/lib/components/index.d.ts",
  "scripts": {
    "build": "cross-env NODE_ENV=production node scripts/build.js",
    "build:storybook": "build-storybook",
    "chromatic": "chromatic test --exit-zero-on-changes",
    "format": "prettier --write \"{*,{lib,config,scripts,.storybook}/**/*}.+(js|jsx|ts|tsx|css|scss|json|yml|md|mdx|html)\"",
    "lint": "concurrently \"yarn:lint:ts\" \"yarn:lint:styles\"",
    "lint:styles": "stylelint --ignore-path .gitignore --fix \"packages/**/*.+(scss|css)\"",
    "lint:ts": "tsc --noEmit && tslint --fix --project tsconfig.json",
    "semantic-release": "semantic-release",
    "start": "yarn run storybook",
    "storybook": "start-storybook -p 6006",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit  --extends @autoguru/commitlint-config",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "package.json": [
        "npx sort-package-json",
        "git add"
      ],
      "*.{js,jsx,ts,tsx,css,scss,json,yml,md,mdx,html}": [
        "prettier --write",
        "git add"
      ],
      "*.{js,tsx,ts,tsx}": [
        "jest --bail --findRelatedTests",
        "git add"
      ],
      "*.{scss,css}": [
        "stylelint --ignore-path .gitignore --fix",
        "prettier --write",
        "git add"
      ]
    },
    "relative": true
  },
  "dependencies": {
    "@autoguru/utilities": "^1.0.13",
    "clsx": "^1.0.3"
  },
  "devDependencies": {
    "@autoguru/babel-preset": "^1.0.12",
    "@autoguru/commitlint-config": "^1.0.13",
    "@autoguru/jest-preset": "^1.0.13",
    "@autoguru/tsconfig": "^1.0.12",
    "@babel/core": "^7.3.3",
    "@commitlint/cli": "^7.5.2",
    "@octokit/rest": "^16.17.1",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-backgrounds": "^5.0.1",
    "@storybook/addon-knobs": "^5.0.1",
    "@storybook/addon-notes": "^5.0.1",
    "@storybook/addon-storysource": "^5.0.1",
    "@storybook/addon-viewport": "^5.0.1",
    "@storybook/components": "^5.0.1",
    "@storybook/core": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "@storybook/theming": "^5.0.1",
    "@types/node": "^11.11.3",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.2",
    "autoprefixer": "^9.4.10",
    "awesome-typescript-loader": "^5.2.0",
    "babel-loader": "^8.0.0",
    "chalk": "^2.4.2",
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "cosmiconfig": "^5.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.0",
    "enzyme-to-json": "^3.3.0",
    "fs-extra": "^7.0.1",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.5.0",
    "jest-enzyme": "^7.0.2",
    "jest-junit": "^6.3.0",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.16.4",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "resolve-url-loader": "^3.0.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.6.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-typescript2": "^0.20.1",
    "sass-loader": "^7.1.0",
    "semantic-release": "^15.13.3",
    "storybook-chromatic": "^1.3.0",
    "style-loader": "^0.23.0",
    "stylelint": "^9.10.0",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.4",
    "tslib": "^1.9.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "~3.3.0",
    "webpack": "^4.29.6"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  }
}
