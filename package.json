{
	"name": "overdrive",
	"version": "0.1.0",
	"private": true,
	"license": "MIT",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"chromatic": "chromatic test --exit-zero-on-changes --build-script-name storybook:build",
		"format": "prettier --list-different --write \"**/*.+(js|jsx|ts|tsx|json|yml|md|mdx|html)\"",
		"postinstall": "patch-package && manypkg check",
		"lint": "eslint \"packages/**/*.+(ts|tsx)\" --fix --quiet",
		"playroom:build": "playroom build",
		"release": "changeset publish",
		"start": "concurrently -k \"playroom\" \"yarn:storybook\"",
		"storybook": "start-storybook -p 6006",
		"storybook:build": "build-storybook",
		"test": "jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"!(stories).{js,tsx,ts,tsx}": [
			"eslint --quiet --fix",
			"jest --bail --findRelatedTests",
			"prettier --write"
		],
		"*.{js,jsx,ts,tsx,json,yml,md,mdx,html}": [
			"prettier --write"
		],
		"package.json": [
			"npx sort-package-json",
			"prettier --write"
		]
	},
	"browserslist": "extends browserslist-config-autoguru",
	"prettier": {
		"bracketSpacing": true,
		"jsxBracketSameLine": true,
		"printWidth": 80,
		"proseWrap": "always",
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	},
	"resolutions": {
		"react": "17.0.1",
		"react-dom": "17.0.1"
	},
	"dependencies": {
		"@autoguru/babel-preset": "1.0.98",
		"@autoguru/eslint-plugin": "1.1.3",
		"@autoguru/jest-preset": "1.0.97",
		"@babel/core": "7.12.9",
		"@babel/runtime-corejs3": "7.12.5",
		"@changesets/cli": "2.12.0",
		"@manypkg/cli": "0.16.1",
		"@octokit/rest": "18.0.12",
		"@storybook/addon-a11y": "6.1.10",
		"@storybook/addon-essentials": "6.1.10",
		"@storybook/addon-knobs": "6.1.10",
		"@storybook/addons": "6.1.10",
		"@storybook/react": "6.1.10",
		"@storybook/theming": "6.1.10",
		"@testing-library/jest-dom": "5.11.6",
		"@testing-library/react": "11.2.2",
		"@testing-library/react-hooks": "3.7.0",
		"@testing-library/user-event": "12.5.0",
		"@types/node": "14.14.11",
		"@types/react": "17.0.0",
		"@types/react-dom": "17.0.0",
		"@types/webpack-env": "1.16.0",
		"babel-loader": "8.2.2",
		"babel-plugin-treat": "1.6.2",
		"browserslist-config-autoguru": "1.0.88",
		"chromatic": "5.4.0",
		"concurrently": "5.3.0",
		"core-js": "3.8.1",
		"csstype": "^3.0.5",
		"eslint": "7.15.0",
		"glob": "7.1.6",
		"husky": "4.3.5",
		"jest": "26.6.3",
		"lint-staged": "10.5.3",
		"magic-string": "0.25.7",
		"patch-package": "6.2.2",
		"playroom": "0.22.3",
		"plop": "2.7.4",
		"prettier": "2.2.1",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"react-test-renderer": "17.0.1",
		"rimraf": "3.0.2",
		"style-loader": "1.2.1",
		"treat": "1.6.1",
		"ts-loader": "8.0.11",
		"tslib": "2.0.3",
		"typescript": "4.1.2",
		"webpack": "4.44.2"
	},
	"volta": {
		"node": "15.3.0",
		"yarn": "1.22.5"
	}
}
